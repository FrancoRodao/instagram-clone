{
    "env": {
        "es2021": true,
        "node": true,
        "jest": true
    },
    "overrides": [
        {
          "files": ["*.js", "*.jsx", "*.ts", "*.tsx"],
          "extends": "standard-with-typescript"
        }
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "ignorePatterns": ["/build"]
}
